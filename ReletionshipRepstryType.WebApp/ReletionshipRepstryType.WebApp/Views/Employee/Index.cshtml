@model IEnumerable<ReletionshipRepstryType.WebApp.ViewModel.EmployeeVm>
@{

}
<a asp-action="CreateOrEdit" Asp-asp-controller="Employee" class="btn btn-primary"> Add Employee</a>
  
<div class="container mt-3">
    <table class="table table-bordered table-responsive">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Address</th>
                <th>Gender</th>
                <th>JoiningDate</th>
                <th>Ssc</th>
                <th>Hsc</th>
                <th>Bsc</th>
                <th>Msc</th>
                <th>Picture</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Address</td>
                    <td>@item.Gender</td>
                    <td>@item.JoiningDate</td>
                    <td>@item.Ssc</td>
                    <td>@item.Hsc</td>
                    <td>@item.Bsc</td>
                    <td>@item.Msc</td>
                    <td>@item.Picture</td>
                    <td>
                        <a asp-action="CreateOrEdit" asp-controller="Employee" asp-route-id="@item.Id" class="btn btn-outline-secondary">Edit </a>
                        <a asp-action="Ditelis" asp-controller="Employee" asp-route-id="@item.Id" class="btn btn-outline-info">Ditelis </a>
                        <a asp-action="Delete" asp-controller="Employee" asp-route-id="@item.Id" class="btn btn-outline-danger" onclick="return confirm('Are You Sure Delete id !')">Delete </a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>